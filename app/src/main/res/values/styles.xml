<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/design_default_color_secondary</item>

    </style>

    <style name="Widget.Theme.AndroidAuthMongoDBNodeJS.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!--스피너 칸막이 -->
    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/myTextColor</item> <!-- divider 색 -->
        <item name="android:dividerHeight">2dp</item> <!-- divider 높이 -->
    </style>


    <style name="SpinnerTheme" parent="AppTheme">
        <item name="android:textColor">@color/myTextColor</item>
        <item name="android:colorBackground">@color/cardview_shadow_start_color</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
        <!--스피너 칸막이 -->
    </style>


</resources>

